    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "在下方输入 JWT token（前面不要加 Bearer）",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}